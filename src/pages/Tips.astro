---
import TipsData from "../components/Tips/TipsData.astro"
import NavBar from "../components/Navegacion/NavBar.astro"
import Layout from "../layouts/Layout.astro"
import Footer from "../components/Footer/Footer.astro";

---


<Layout title="Tips">
<NavBar />
<TipsData />
<Footer />
</Layout>


<style is:global >      

  h2 {
      padding: 10px;
      margin: 0 auto;
      text-align: center;
      font-size: 3rem;
      color: #fff000;
    } 

    p {
      font-size: 1.1rem;
      padding: 10px;
      margin: 0 auto;
      width: 100%;
      text-align: center;
      color: #ffffff;
      filter: drop-shadow(0 0 0.75rem black);

    }
     li {
      font-size: 1rem;
      padding: 10px;
      margin: 0 auto;
      width: 100%;
      text-align: center;
      display: flex;
    }
    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      filter: grayscale(100%);
    }

    img:hover {
      filter: grayscale(0%);
    }
    
  .bg {
    background: #13151a;
    color: white;
    height: 100vh;
  }

  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
    background-size: 224px;
    color: white;
  }
  article, {
    margin: 0 auto;
    padding: 2rem;
    
  }

  .art-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>