---
import Layout from "../layouts/Layout.astro"
import Hero from "./Hero.astro"

---


<Layout title="Hero Last">
    <div class="container-principal capa">
        <video autoplay muted loop id="video-background" type="video/mp4" >
        <source src="https://firebasestorage.googleapis.com/v0/b/pixelarstudiodb.appspot.com/o/fondoheader1.mp4?alt=media&token=daeb5fd3-0bd1-4ae1-b9fb-217880f61f36"/>
        </video>
        <Hero />

    </div>



</Layout>

<style is:global>

.container-principal {
    position: relative;
    width: 100%;
    height: auto;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden; /* Asegura que el video no sobresalga del contenedor */
}

#video-background {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    height: 100%;
    object-fit: cover; /* Cubre todo el contenedor */
    transform: translate(-50%, -50%);
    z-index: -1; /* Env√≠a el video al fondo */
}



h2 {
      padding: 10px;
      margin: 0 auto;
      text-align: center;
      font-size: 3rem;
      color: #fff000;
    } 


</style>


