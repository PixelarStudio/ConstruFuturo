---
import { navigate } from "astro:transitions/client";

const imgLogo = "./img/logoNavBarBg.png";
---

<nav class="nav backdrop-blur-sm sticky top-0 margin-0">
  <div class="logo w-auto h-12 p-0 "><img src={imgLogo} alt="LOGO ConstruFuturo" /></div>
  <div>
    <a href="/"><em>Inicio</em></a>
    <a href="/Faq"><em>Faq</em></a>
    <a href="/Horarios"><em>Horarios</em></a>
    <a href="/Precios"><em>Precios</em></a>
    <a href="/Servicios"><em>Servicios</em></a>
    <a href="/Tips"><em>Tips</em></a>
  </div>
  <div class="login"> </div>
 
</nav>

<style is:global>
  nav {
    display: flex;
    gap: 10px;
    justify-content: space-around;
    padding: 2rem;
    height: auto;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.7);
    z-index: 1000;
  }

  ul,
  a {
    background-color: black;
    color: white;
    padding: 10px;
    border-radius: 5px;
    text-decoration: none;
    font-weight: bold;
  }

  a:hover {
    background-color: #ffffff;
    color: rgb(0, 0, 0);
  }

  
</style>

<script>
    function toggleTheme() {
      const currentTheme = document.documentElement.getAttribute('data-theme');
      document.documentElement.setAttribute('data-theme', currentTheme === 'dark' ? 'light' : 'dark');
    }
  </script>
  