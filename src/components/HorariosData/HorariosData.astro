---
import Layout from "../../layouts/Layout.astro";
import { CiMail } from "react-icons/ci";
import { FaMapMarkerAlt } from "react-icons/fa";
import { IoTimeOutline } from "react-icons/io5";
import { BsTelephoneInbound } from "react-icons/bs";
---

<Layout title="Horarios de Atención">
  <div>
    <h2 class="text-4xl h-24 font-bold text-center">Horarios</h2>
  </div>

  <section class="container-section bg-slate-800">
    <div class="horario bg-slate-600 hover:bg-slate-700">
      <IoTimeOutline className="IoTimeOutline" size={90} />

      <h3>Lunes a Viernes:</h3>
      <p><span>8:00 am - 6:00 pm</span></p>
      <h3>Sabados y Domingos:</h3>
      <p><span>Cerrado</span></p>
    </div>
    <div class="telefono bg-slate-600 hover:bg-slate-700 text-white">
      <BsTelephoneInbound className="BsTelephoneInbound" size={90} />

      <h3>Teléfono:</h3>
      <p>+54 1234 5678</p>
    </div>
    <div class="correo bg-slate-600 hover:bg-slate-700 text-white">
      <CiMail className="CiMail" size={90} />

      <h3>Correo electrónico:</h3>
      <p>contacto@construfuturo.com</p>
    </div>
    <div class="ubicacion bg-slate-600 hover:bg-slate-700 text-white">
      <FaMapMarkerAlt className="FaMapMarkerAlt" size={90} />

      <h3>Ubicación:</h3>
      <p>Avenida Constructor 456, Buenos Aires, Argentina</p>
    </div>
  </section>
</Layout>

<script>

</script>

<style is:global>
  .container-section {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    margin: 0 auto;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  .horario {
    grid-area: horario;
    padding: 1rem;
    border-radius: 10px;
    margin: 1rem;
    text-align: center;
    color: black;
    width: 300px;
  height: 300px;
  }

  .telefono {
    grid-area: telefono;
    padding: 1rem;
    border-radius: 10px;
    margin: 1rem;
    text-align: center;
    color: black;
    width: 300px;
  height: 300px;
  }

  .correo {
    grid-area: correo;
    padding: 1rem;
    border-radius: 10px;
    margin: 1rem;
    text-align: center;
    color: black;
    width: 300px;
  height: 300px;
  }

  .ubicacion {
    grid-area: ubicacion;
    padding: 1rem;
    border-radius: 10px;
    margin: 1rem;
    text-align: center;
    color: black;
    width: 300px;
  height: 300px;
  }

  .container-section h3 {
    font-size: 1.5rem;
    color: white;
  }

  .FaMapMarkerAlt, .CiMail, .BsTelephoneInbound, .IoTimeOutline   {
    display: flex;
    color: white;
    margin: 0 auto;
    padding: 10px;

  }

  h2 {
    padding: 10px;
    margin: 0 auto;
    text-align: center;
    font-size: 3rem;
    color: #fff000;
  }

  p {
    font-size: 1.1rem;
    padding: 10px;
    margin: 0 auto;
    width: 100%;
    text-align: center;
    color: #ffffff;
    filter: drop-shadow(0 0 0.75rem black);
  }
  li {
    font-size: 1rem;
    padding: 10px;
    margin: 0 auto;
    width: 100%;
    text-align: center;
    display: flex;
  }
  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(100%);
  }

  img:hover {
    filter: grayscale(0%);
  }

  .bg {
    background: #13151a;
    color: white;
    height: 100vh;
  }

  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
    background-size: 224px;
    color: white;
  }
  article {
    margin: 0 auto;
    padding: 2rem;
  }

  .art-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
