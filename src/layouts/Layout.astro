---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--color-bg: #ffffff;  /* Color de fondo para el tema claro */
		--color-text: #333333; /* Color de texto para el tema claro */
	}
	
	[data-theme="dark"] {
		--color-bg: #333333;  /* Color de fondo para el tema oscuro */
		--color-text: #ffffff; /* Color de texto para el tema oscuro */
	}
	
	body {
		background-color: var(--color-bg);
		color: var(--color-text);
		padding: 0;

		
	}
	
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		background-size: 224px;
		color: white;
		max-width: 80%;
		margin: 0 auto;
		top: 0;

	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
	}

	
</style>
	
